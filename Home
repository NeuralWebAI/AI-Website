<!DOCTYPE html>
<html>
<head>
  <title>ScrollTube</title>
  <style>
    /* Set body background color and remove default margin/padding */
    body {
      margin: 0;
      padding: 0;
      background-color: #000;
      font-family: Arial, sans-serif;
    }

    /* Create the container for the scrollable videos */
    .video-container {
      scroll-snap-type: y mandatory;
      overflow-y: scroll;
      height: 100vh;
      scroll-behavior: smooth;
    }

    /* Style the individual video sections */
    .video-section {
      scroll-snap-align: start;
      height: 120vh; /* Increase the height to make the outline longer */
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      border-radius: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    /* Style the video iframes */
    .youtube-video {
      width: 100%;
      height: 56.25vh; /* 16:9 aspect ratio */
      max-width: 100%;
      max-height: 100%;
      border-radius: 20px;
    }

    /* Watermark styles */
    .watermark {
      position: absolute;
      top: 10px;
      left: 10px;
      color: white;
      font-size: 24px;
      font-weight: bold;
      opacity: 0.5;
    }

    /* Button styles */
    .buttons {
      position: absolute;
      top: 10px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
    }

    .button {
      margin: 0 5px;
      color: white;
      font-size: 16px;
      cursor: pointer;
      background: none;
      border: none;
    }
  </style>
</head>
<body>
  <!-- Watermark -->
  <div class="watermark">ScrollTube</div>

  <!-- Buttons -->
  <div class="buttons">
    <button class="button">Button 1</button>
    <button class="button">Button 2</button>
  </div>

  <!-- Video container -->
  <div class="video-container">
    <!-- Video sections -->
    <div class="video-section">
      <iframe class="youtube-video" src="https://www.youtube.com/embed/AjLKTz81bj8?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
    <div class="video-section">
      <iframe class="youtube-video" src="https://www.youtube.com/embed/avz06PDqDbM?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
    <div class="video-section">
      <iframe class="youtube-video" src="https://www.youtube.com/embed/Y274jZs5s7s?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
    <div class="video-section">
      <iframe class="youtube-video" src="https://www.youtube.com/embed/f-zqS2CiZqw?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
    <!-- Add more video sections as needed -->
  </div>

  <script>
    // Scroll snap navigation using arrow keys
    window.addEventListener('keydown', function(e) {
      const container = document.querySelector('.video-container');
      if (e.key === 'ArrowUp') {
        container.scrollBy({
          top: -window.innerHeight,
          behavior: 'smooth'
        });
      } else if (e.key === 'ArrowDown') {
        container.scrollBy({
          top: window.innerHeight,
          behavior: 'smooth'
        });
      }
    });

    // Scroll snap navigation using touch gestures
    let touchStartY = 0;
    window.addEventListener('touchstart', function(e) {
      touchStartY = e.touches[0].clientY;
    });

    window.addEventListener('touchend', function(e) {
      const container = document.querySelector('.video-container');
      const touchEndY = e.changedTouches[0].clientY;
      const deltaY = touchEndY - touchStartY;

      if (deltaY < -50) {
        container.scrollBy({
          top: window.innerHeight,
          behavior: 'smooth'
        });
      } else if (deltaY > 50) {
        container.scrollBy({
          top: -window.innerHeight,
          behavior: 'smooth'
        });
      }
    });
  </script>
</body>
</html>
